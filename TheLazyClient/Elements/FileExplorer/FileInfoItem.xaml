<UserControl x:Class="FileInfoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="49.624" Width="232.697">
    <Grid Background="#FFFFF6CD">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Height="50" Width="51"/>
        <Grid Grid.Column="1">
            <Label x:Name="lblFileName" Content="Nom del fitxer" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="144"/>
            <Label x:Name="lblFileSize" Content="Mida del fitxer" VerticalAlignment="Bottom"/>
        </Grid>
        <Button Content="" Width="38" Height="30" BorderBrush="{x:Null}" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="/TheLazyClient;component/media/Icones/Download.png"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
